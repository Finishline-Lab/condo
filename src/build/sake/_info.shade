default info_project = ''
default info_path    = ''
default info_date    = '${ Utc }'

var final_info_path = '{ !string.IsNullOrEmpty(info_project) ? Path.GetDirectoryName(info_project) : info_path }'

@{
    if (string.IsNullOrEmpty(final_info_path))
    {
        throw new ArgumentException("info: a project file must be specified.", "info_path");
    }
}